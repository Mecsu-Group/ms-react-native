{
  "editor.fontSize": 12,
  "files.autoSave": "onWindowChange",
  "editor.wordWrap": "on",
  "javascript.validate.enable": false,
  "typescript.validate.enable": false,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {},
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.rulers": [
    0,
    0
  ],
  "files.exclude": {
    "**/__pycache__": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/build": true
  }
}